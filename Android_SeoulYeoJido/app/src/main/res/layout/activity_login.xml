<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logon_activity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rhxorhkd.android_seoulyeojido.LoginActivity">

    <ImageView
        android:layout_marginTop="43dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/login_btn_back"
        android:src="@drawable/back"
        android:layout_width="18dp"
        android:layout_height="18dp" />


    <EditText
        android:textColor="#9e9e9e"
        android:textSize="11sp"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:hint="이메일"
        android:layout_above="@+id/pw"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email" />

    <EditText
        android:textSize="11sp"
        android:padding="8dp"
        android:maxLength="12"
        android:layout_marginTop="8dp"
        android:hint="비밀번호"
        android:layout_centerVertical="true"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:id="@+id/pw" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:background="@drawable/find_password"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/pw"
        android:id="@+id/find_pw"
        android:layout_width="270dp"
        android:layout_height="30dp" />


    <ImageView
        android:background="@drawable/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/pw"
        android:text="로그인"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:id="@+id/submit" />

    <ImageView
        android:background="@drawable/join"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/submit"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:id="@+id/go_join" />




</RelativeLayout>
