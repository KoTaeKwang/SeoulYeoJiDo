    <ImageView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/back"
        android:id="@+id/map_back"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <RelativeLayout
        android:id="@+id/location_detail"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            android:id="@+id/map_bottom_img"
            android:src="@drawable/irene2"
            android:layout_alignParentLeft="true"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        
        <ImageView
            android:background="#121212"
            android:layout_alignParentRight="true"
            android:id="@+id/flag"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        
        <TextView
            android:id="@+id/location_name"
            android:text="장소이름"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/map_bottom_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/checkin_text"
            android:layout_below="@id/location_name"
            android:text="체크인"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/map_bottom_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="3"
            android:id="@+id/checkin_cnt"
            android:layout_below="@id/location_name"
            android:layout_toRightOf="@+id/checkin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/checkin_cnt"
            android:layout_below="@id/location_name"
            android:textSize="16sp"
            android:text="      댓글"
            android:id="@+id/location_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/location_reply"
            android:layout_below="@id/location_name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="163"
            android:id="@+id/reply_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/map_bottom_img"
            android:layout_below="@+id/checkin_text"
            android:text="랜드마크 · 중구"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

