<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemlayout">

    <ImageView
        android:id="@+id/lay_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lay_textview"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:id="@+id/seconditemlayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="left"
                android:text="체크인"/>

            <TextView
                android:id="@+id/lay_textcheckcount"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="left"
                android:text="댓글"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/lay_reviewcheckcount"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lay_textview3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="left"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/lay_textview4"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="left"/>

        </LinearLayout>


    </LinearLayout>

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_marginTop="10dp"
      android:id="@+id/heartimage"
      android:src="@drawable/heart1"/>

</LinearLayout>