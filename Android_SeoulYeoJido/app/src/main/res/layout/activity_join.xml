<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rhxorhkd.android_seoulyeojido.JoinActivity">

    <ImageView
        android:id="@+id/join_btn_back"
        android:src="@drawable/back"
        android:layout_width="50dp"
        android:layout_height="25dp" />

    <ImageView
        android:layout_above="@+id/join_text"
        android:src="@drawable/log_on"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/join_img" />
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/join_text"
        android:layout_above="@+id/join_email"
        android:text="회원가입"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:hint="이메일"
        android:layout_above="@+id/nickname"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:id="@+id/join_email" />

    <EditText
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:hint="닉네임"
        android:maxLength="20"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/nickname" />

    <EditText
        android:padding="8dp"
        android:maxLength="12"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/nickname"
        android:background="#ffffff"
        android:hint="비밀번호(영문,숫자 조합 6~12자리)"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:id="@+id/pw1" />

    <EditText
        android:padding="8dp"
        android:maxLength="12"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:hint="비밀번호 확인"
        android:layout_below="@+id/pw1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:id="@+id/pw2" />



    <Button
        android:layout_marginTop="16dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textAlignment="center"
        android:background="#b0a6d0"
        android:layout_below="@+id/pw2"
        android:text="회원가입"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/done" />

</RelativeLayout>
