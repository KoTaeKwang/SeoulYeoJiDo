<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="22dp"
        android:background="#ffffff"
        android:id="@+id/rank_second_list"
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/rank_second_order"
            android:text="2"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="13dp" />

        <ImageView
            android:background="@drawable/rank_item_border"
            android:layout_marginRight="26dp"
            android:layout_marginLeft="32dp"
            android:id="@+id/rank_second_profile_img"
            android:layout_toRightOf="@+id/rank_second_order"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />



        <TextView
            android:id="@+id/plain_username"
            android:text="박정복"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/rank_second_profile_img"
            android:layout_centerVertical="true"
            android:textSize="13sp"
            android:layout_width="70dp"
            android:layout_height="13dp" />
        <TextView
            android:text="101"
            android:layout_toRightOf="@+id/plain_username"
            android:layout_centerVertical="true"
            android:textColor="#9e9e9e"
            android:textSize="13sp"
            android:layout_width="60dp"
            android:layout_height="13dp" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_width="60dp"
            android:layout_height="18dp" />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            app:srcCompat="@drawable/rank_two"
            android:id="@+id/imageView8"
            android:layout_below="@+id/plain_username"
            android:layout_alignRight="@+id/rank_second_profile_img"/>


    </RelativeLayout>
    <View
        android:background="#d7d7d7d7"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
</LinearLayout>