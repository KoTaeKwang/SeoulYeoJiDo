<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rhxorhkd.android_seoulyeojido.rank">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:text="Rank"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="35sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/find_myRank"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/focus"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_alignBottom="@+id/rl"
        android:background="#e3dede"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rank_rc"
        android:layout_below="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
