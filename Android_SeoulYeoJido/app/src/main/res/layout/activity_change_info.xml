<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_info"
    android:padding="16dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rhxorhkd.android_seoulyeojido.ChangeInfo">

    <ImageView
        android:id="@+id/chage_back"
        android:src="@drawable/back"
        android:layout_width="40dp"
        android:layout_height="20dp" />
    <TextView
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:text="My Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginBottom="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/change_img"
        android:layout_width="180dp"
        android:layout_height="180dp" />
    <EditText
        android:layout_below="@+id/change_img"
        android:id="@+id/change_nickname"
        android:textAlignment="center"
        android:text="아이린"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/logout"
        android:text="로그아웃"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="#242323"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</RelativeLayout>
